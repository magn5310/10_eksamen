---
import Knap from "../components/Knap.astro";
const { name, info, img1, img2, img3, img4, price, type, id, materials, sten, second_name } = Astro.props;
---

<div class="img_container">
  <img src={"/img/desktop_img/" + img1} alt="" />
  <div class="layout">
    <div>
      {/* Betinget rendering baseret på værdien af second_name */}
      {second_name ? <h3 class="cardh2">{name + " " + second_name}</h3> : <h3 class="cardh2">{name}</h3>}

      <p>{info}</p>
    </div>
    <div class="knap">
      <Knap color="blue" text="shop" link={id} />
    </div>
  </div>
</div>
<style>
  .cardh2 {
    color: var(--black);
    margin-top: 1rem;
  }
  a {
    text-decoration: none;
  }

  .img_container {
    overflow: hidden;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  h3 {
    /* margin-top: 0.5rem; */
  }
  p {
    /* margin-bottom: 2rem; */
  }
  img {
    width: 100%;
    object-fit: cover;
    align-self: stretch;
    max-height: 500px;
  }
  .layout {
    display: flex;
    width: 100%;
    justify-content: space-between;
  }
  .knap {
    margin-block: 2rem;
    margin-right: 0rem;
  }
  p {
    margin-top: -0.5rem;
  }
  @media (max-width: 800px) {
    .img_container {
      width: 350px;
      margin-bottom: 3rem;
    }
    img {
      height: 450px;
      max-height: 700px;
      min-height: 0;
    }
    .layout p {
      display: none;
    }
    .layout {
      align-items: center;
    }
    .cardh2 {
      color: var(--black);
      margin-top: 0rem;
    }
  }
</style>
